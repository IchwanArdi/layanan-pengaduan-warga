<!DOCTYPE html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/src/output.css" />
    <link rel="icon" type="image/png" href="/icon/logo.png" />
    <title>Halaman Login | Data Desa</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/inter-ui/3.19.3/inter.min.css" />
  </head>
  <body class="min-h-screen flex items-center justify-center p-4 bg-gray-900 text-white">
    <!-- Container Login -->
    <div class="w-full max-w-md rounded-2xl shadow-2xl p-8 bg-gray-800">
      <div class="text-center mb-8">
        <div class="w-16 h-16 bg-gradient-to-r from-blue-600 to-indigo-600 rounded-full flex items-center justify-center mx-auto mb-4">🏠</div>
        <h1 class="text-2xl font-bold text-white mb-2">Portal Desa Pentingsari</h1>
        <p class="text-gray-300">Masuk ke sistem administrasi desa</p>

        <% if(typeof error_msg != 'undefined' && error_msg != ''){ %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
          <span class="block sm:inline"><%= error_msg %></span>
        </div>
        <% } %> <% if(typeof success_msg != 'undefined' && success_msg != ''){ %>
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative" role="alert">
          <span class="block sm:inline"><%= success_msg %></span>
        </div>
        <% } %>
      </div>

      <!-- Notifikasi Error -->
      <div class="mt-2">
        <% if (typeof errors !== 'undefined') { %> <% errors.forEach(function(error) { %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
          <span class="block sm:inline"><%= error.msg %></span>
        </div>
        <% }); %> <% } %>
      </div>

      <!-- Form Login -->
      <form action="/auth/login" method="POST" class="space-y-6">
        <!-- Email -->
        <div>
          <label class="block text-sm font-medium text-gray-300 mb-2">Email</label>
          <input
            type="email"
            name="email"
            value="<%= typeof email !== 'undefined' ? email : '' %>"
            class="w-full px-4 py-3 rounded-lg border bg-gray-700 border-gray-600 text-white placeholder-gray-400 focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            placeholder="Masukkan Email Anda"
            required
          />
        </div>

        <!-- Password -->
        <div>
          <label class="block text-sm font-medium text-gray-300 mb-2">Password</label>
          <div class="relative">
            <input
              id="password"
              type="password"
              name="password"
              class="w-full px-4 py-3 pr-12 rounded-lg border bg-gray-700 border-gray-600 text-white placeholder-gray-400 focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              placeholder="Masukkan password"
              required
            />
            <button type="button" onclick="togglePassword()" class="absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-400 hover:text-white">
              <span id="toggleIcon">👁️</span>
            </button>
          </div>
        </div>

        <!-- Tombol Login -->
        <button type="submit" class="w-full py-3 bg-gradient-to-r from-blue-600 to-indigo-600 text-white font-semibold rounded-lg hover:from-blue-700 hover:to-indigo-700 transform hover:scale-[1.02] transition-all duration-200 shadow-lg">
          Masuk
        </button>

        <!-- Link ke halaman register -->
        <div class="text-center text-sm mt-4 text-gray-400">
          <p>
            Belum punya akun?
            <a href="/auth/register" class="text-blue-400 hover:underline">Daftar di sini</a>
          </p>
        </div>
      </form>

      <!-- Footer -->
      <div class="mt-6 text-center text-sm text-gray-400">
        <p>🔒 Semua data dienkripsi untuk keamanan</p>
      </div>
    </div>

    <!-- Toggle Password Script -->
    <script>
      function togglePassword() {
        const input = document.getElementById('password');
        const isShowing = input.type === 'text';
        input.type = isShowing ? 'password' : 'text';
        document.getElementById('toggleIcon').textContent = isShowing ? '👁️' : '🙈';
      }
    </script>
  </body>
</html>
